<i>Welcome to the software download utility. Please select which software you wish to download.</i><hr>
{{if data.error}}
	<h2>Download Error</h2>
	<div class="itemLabel">
		Information: 
	</div>
	<div class="itemContent">
		{{:data.error}}
	</div>
	<div class="itemLabel">
		Reset Program: 
	</div>
	<div class="itemContent">
		{{:helper.link("RESET", null, {'PRG_reseterror' : 1})}}
	</div>	
	<hr>
{{/if}}


{{if data.downloadname}}
	<h2>Download in progress</h2>
	<i>Please wait...</i>
	<div class="item">
		<div class="itemLabel">File name:</div>
		<div class="itemContent">{{:data.downloadname}}</div>
		<div class="itemLabel">File description:</div>
		<div class="itemContent">{{:data.downloaddesc}}</div>
		<div class="itemLabel">Transfer Rate:</div>
		<div class="itemContent">{{:data.downloadspeed}} GQ/s</div>
		<div class="itemLabel">Download progress:</div>
		<div class="itemContent">
			{{:helper.displayBar(data.downloadcompletion, 0, data.downloadsize, 'good', data.downloadcompletion + 'GQ / ' + data.downloadsize + 'GQ')}}
			{{:helper.link('', (data.download_paused ? 'play' : 'pause'), {'download_pause' : 1})}}	
			{{:helper.link('', 'stop', {'download_stop' : 1})}}	
		</div>
	</div>

	<br><hr>
{{/if}}

{{if data.downloads_queue && data.downloads_queue.length}}
	<h2>Downloads Queue</h2>
	<div class="item">
	{{for data.downloads_queue}}
		<div class="itemLabel">
			{{:index + 1}}:
		</div>
		<div class="itemContent">
			{{:value}}
			{{:helper.link('', 'close', {'PRG_removequeued' : value})}}
		</div>
	{{empty}}
		<i>The queue is currently empty.</i>
	{{/for}}
	</div>

	<br><hr>
{{/if}}

	<h2>Primary software repository</h2>
	<div class="itemLabel">
		Hard drive: 
	</div>
	<div class="itemContent">
		{{:helper.displayBar(data.disk_used, 0, data.disk_size, 'good', data.disk_used + "GQ / " + data.disk_size + "GQ")}}
	</div>
	<table>
	{{for data.downloadable_programs}}
		<tr><td>{{:helper.link('', value.icon, {'PRG_downloadfile' : value.filename}, ((value.in_queue || value.filename == data.downloadname) ? 'disabled' : null))}}	
			<td><span class='white'>{{:value.filedesc}}</span>
			<td>{{:value.fileinfo}}
			<td><div style="white-space: nowrap;">{{:value.size}} GQ
		</div>
	{{/for}}
	</table>
	{{if data.hackedavailable}}
		<h2>*UNKNOWN* software repository</h2>
		<table>
		{{for data.hacked_programs}}
		<tr><td>{{:helper.link('', value.icon, {'PRG_downloadfile' : value.filename}, ((value.in_queue || value.filename == data.downloadname) ? 'disabled' : null))}}	
			<td><span class='white'>{{:value.filedesc}}</span>
			<td>{{:value.fileinfo}}
			<td>{{:value.size}} GQ
		</div>
		{{/for}}
		</table>
	{{/if}}

